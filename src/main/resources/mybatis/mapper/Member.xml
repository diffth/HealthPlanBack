<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.healthplan.work.dao.MemberMapper">

    <!-- 회원 리스트 -->
    <select id="selectMemberList"
            resultType="com.healthplan.work.vo.MemberEntity">
        select *
        from MEMBER
        ORDER BY mno DESC
    </select>

<!--    &lt;!&ndash; mno로 회원정보 조회 &ndash;&gt;
    <select id ="selectMno" resultType ="com.healthplan.work.vo.MemberEntity">
        select *
        from MEMBER
        where mno = #{mno}
    </select>-->

    <!--회원번호로 아이디 조회 (댓글)-->
    <select id="selectUuidByMno" resultType="java.lang.String" parameterType="int">
        SELECT uuid
        FROM member
        WHERE mno = #{mno}
    </select>


    <!--회원번호로 아이디 조회 (리스트)-->
    <select id="getUuidByMno" resultType="map" >
        SELECT uuid
        FROM member
        WHERE mno IN
        <foreach collection="mnos" item="mno" open="(" separator="," close=")">
            #{mno}
        </foreach>
    </select>


    <!-- 회원가입 -->
    <insert id="insertMem">
        insert into member
        (mno, uuid, upw, phone, name, mtype, email, regdate)
        values
        (mno_seq.NEXTVAL, #{uuid}, #{upw}, #{phone}, #{name}, #{mtype},
        #{email}, SYSDATE)
    </insert>

    <!-- 현재 회원번호 조회  -->
    <select id="currval"  resultType="int">
        SELECT mno_seq.currval from dual
    </select>

    <!-- 초기 포인트 입력  -->
    <insert id = "setpoint" >
        insert
        into point (pno, mno, pcount, psource, pdate)
        values (pno_seq.NEXTVAL, #{pmno}, '0', '회원가입', sysdate)
    </insert>

    <!-- 로그인 > 비밀번호 일치여부 확인-->
    <select id="getHashedPasswordByUuid" resultType="java.lang.String">
        select upw
        from member
        where uuid = #{uuid}
    </select>

    <!-- 로그인 -->
    <select id="login" resultType="com.healthplan.work.vo.MemberEntity" parameterType="map">
        select *
        from member
        where
        uuid = #{uuid}
        and upw = #{upw}
    </select>

    <!-- 쿠키가 있다면 로그인 유지 -->
    <update id="keepLogin">
        update member
        set sessionKey = #{sessionId},
        sessionLimit = #{next}
        where uuid = #{uuid}
    </update>

    <!-- 아이디 중복 체크 -->
    <select id="uuidCk" resultType="int">
        select count(*)
        from member
        where uuid = #{uuid}
    </select>

    <!-- 이메일 중복 체크 -->
    <select id="emailCk" resultType="int">
        select count(*)
        from member
        where email = #{email}
    </select>

    <!-- 마이페이지 회원 조회 -->
    <select id="selectUuid" resultType="com.healthplan.work.vo.MemberEntity">
        SELECT
        m.mno,
        m.email,
        m.mtype,
        m.name,
        m.phone,
        m.regdate,
        m.upw,
        m.uuid,
        m.sstype,
        p.pcount
        FROM
        member m
        JOIN
        point p
        ON
        m.mno = p.mno
        WHERE
        m.uuid = #{uuid}
    </select>

    <!-- 이름조회 -->
    <select id="selectName" resultType="com.healthplan.work.vo.MemberEntity">
        SELECT name
        FROM
        member
        WHERE
        uuid = #{uuid}
    </select>

    <!-- 회원번호 조회 -->
    <select id="selectMno" resultType="com.healthplan.work.vo.MemberEntity">
        SELECT mno
        FROM
        member
        WHERE
        uuid = #{uuid}
    </select>

    <!-- 마이페이지 회원정보수정 -->
    <update id="update" parameterType="com.healthplan.work.vo.MemberEntity" >
        update member
        set
        upw=#{upw},
        phone=#{phone},
        email=#{email}
        where
        uuid=#{uuid}
    </update>

    <!-- 회원탈퇴 -->
    <delete id="delete">
        delete from member
        where uuid = #{uuid}
    </delete>


</mapper>
